.product_page
    width 100%
    height: 100%
    background: rgba(243, 243, 243, 1)
    display: flex
.filter_con
    font-family: Rubik;
    font-size: 2.2vh;
    font-weight: 500;
    display: flex
    flex-direction: column
    gap 2.7vh
    margin 12vh 0 0 4vw
    width 26vw
.p_page_title
    font-family: Jura;
    font-size: 24px;
    font-weight: 700;
    text-transform: uppercase;
.prod_view
    width: 100%
    padding: 0 3.64vw 0 0
    box-sizing: border-box
.basic_filter_con
    gap 1vw
    width 100%
    height: 2.4vh
    display: flex
    justify-content: flex-end
.b_filter
    cursor pointer
    font-family: Rubik;
    font-size: 14px;
    font-weight: 500;
    display: flex
    justify-content: center
    align-items: center
    gap 0.6vw
.b_filter_line
    height 100%
    width 0.1vw
    background: rgba(133, 212, 169, 1)
.products_con
    margin-top 3vh
    display: flex
    width 100%
    gap 1.5vw
    flex-wrap: wrap
.filter
    margin 0
    font-family: Rubik;
    font-size: 20px;
    font-weight: 500;
    line-height: 23.7px;
    text-align: left;
.input_field
    margin-top 2vh
    display: flex
    gap 1vw
.input
    display: flex
    flex-direction: column
.input input
    width 4.7vw
    height: 4vh
    border: none
    outline: none
    text-align: center
    font-family: Rubik;
    font-size: 18px;
    font-weight: 600;
    line-height: 21.33px;
    text-align: center;

.slider
    margin-top 3vh
    width 17.2vw
    height: 1px
    background: rgba(169, 169, 169, 1)
.slider .thumb
    background: rgba(133, 212, 169, 1)
    border-radius: 50%
    width 0.7vh
    height: 0.7vh
    cursor grab
    top -0.9vh
    border: 0.7vh solid black
.slider {
    margin-top: 3vh;
