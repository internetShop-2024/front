.footer
    width 100%
    height: 48vh
    background: rgba(255, 255, 255, 1)
.top_footer
    padding 4vh 22vw 4vh 3.6vw
    height: 85%
    width 100%
    display: flex
    justify-content: space-between
    box-sizing: border-box
.f_logo
    margin-left 1vw
    width 17vh
    height: 17vh
.footer_email
    margin 4.8vh 0 0 0
    font-family: Inter;
    font-size: 2.2vh;
    font-weight: 400;
.working_time_title
    font-family: Inter;
    font-size: 2.6vh;
    font-weight: 600;
    color: rgba(0, 0, 0, 1)
.working_time_time
    margin-top 2vh
    font-family: Inter;
    font-size: 2.2vh;
    font-weight: 400;
    color: rgba(0, 0, 0, 1)
.sep_line
    height: 100%
    width 0.01vw
    background: rgba(0, 0, 0, 1)
.nav_title
    font-family: Inter;
    font-size: 2.6vh;
    font-weight: 600;
    color: rgba(0, 0, 0, 1)
.nav_link
    cursor: pointer
    margin-top 2.2vh
    font-family: Inter;
    font-size: 2.2vh;
    font-weight: 400;
    color: rgba(0, 0, 0, 1)
.social_title
    font-family: Inter;
    font-size: 2.6vh;
    font-weight: 600;
    color: rgba(0, 0, 0, 1)
.social_links
    margin-top 2.2vh
    font-family: Inter;
    font-size: 2.2vh;
    font-weight: 400;
    color: rgba(0, 0, 0, 1)
.bot_footer
    display: flex
    justify-content: space-around
    align-items: center
    width 100%
    height: 15%
    background: rgba(228, 228, 228, 1)
.debit_card
    display: flex
    gap 1.5vh
    align-items: center

.footer_bot_text
    font-family: Rubik;
    font-size: 1.2vh;
    font-weight: 500;
    text-align: left;
    color rgba(0, 0, 0, 0.5)
