.up_profile 
    transition: 0.3s
    user-select: none
    top 0
    left 0
    position absolute
    width: 100vw
    height: 100vh
    background: rgba(0, 0, 0, 0.226)
    display: flex
    justify-content: center
    align-items: center
    z-index 100
.modal_update
    position relative

    height: 60vh
    width 20vw
    background: white
    border-radius: 1vh
    padding: 3vh 2vw
    box-sizing: border-box
    display: flex
    justify-content: center
    align-items: center
    flex-direction: column
.updaet_heding
    margin 1vh 0 1.6vh 0
    font-family: Jura;
    font-size: 2.4vh;
    font-weight: 700;
.update_btn
    cursor pointer
    width 10vw
    height: 6.8vh
    background: rgba(133, 212, 169, 1)
    font-family: Jura;
    font-size: 2vh;
    font-weight: 700;
    border none
    border-radius: 1vh
    margin 3vh 0 0 0


.modal_update input 
    margin 0vh 0 1vh 0
    border none
    box-shadow: inset 0px 0px 4px 0px rgba(0, 0, 0, 0.308);
    border-radius: 1vh
    height: 5vh
    width 100%
    outline: none
    padding-left: 1vw
    box-sizing: border-box
    font-family: Jura;
    font-size: 1.5vh;
    font-weight: 700;
.close_img_up
    cursor pointer
    display: flex
    justify-content: center
    align-items: center
    position: absolute
    top 1vh
    right: 1vh
    border: none
    background: none
