.card {
    background: rgba(255, 255, 255, 1);
    width: 17vw;
    height: 60vh;
    border-radius: 0.5vh;
    transition: 0.3s ease;
    position: relative;
    padding: 1.2vh 1.2vh
    box-sizing: border-box
    text-decoration: none
}

.card:hover {
    
    box-shadow: 0 0.4vh 2vh rgba(0, 0, 0, 0.25);
}
.articule
    margin 0
    font-family: Inter;
    font-size: 1.2vh;
    font-weight: 400;
    color rgba(113, 113, 113, 1)
.img_con
    margin-top 3vh
    display: flex
    justify-content: center
.img_con img
    width 68%
.product___name
    color black
    margin-top 2vh
    font-family: Jura;
    font-size: 2.2vh;
    font-weight: 400;
.bot_con
    display: flex
    justify-content: space-between
    margin-top 2vh

.sale
    position relative
    font-family: Jura;
    font-size: 2.2vh;
    font-weight: 400;
    color rgba(113, 113, 113, 1)
.sale:after
    top 1.4vh
    left -0.1vw
    content: ""
    width 3vw
    position: absolute
    height: 0.1vh
    background: rgba(113, 113, 113, 1)
.price
    font-family: Jura;
    font-size: 2.8vh;
    font-weight: 500;
    color rgba(0, 0, 0, 1)
.card:hover .price_con {
    display: flex;
    gap: 0.8vw;
}

.card:hover .price
    order: 1
.card:hover .sale
    order: 2
.add_to_cart
    display: flex
    width 50%
    height: 7vh
    background: rgba(235, 235, 235, 1)
    border-radius: 0.5vh
    overflow: hidden
.p_counter
    height: 100%
    width 0%
    display: flex
    justify-content: space-around
    align-items: center
    overflow: hidden
.p_counter div
    font-family: Jura;
    font-size: 2.8vh;
    font-weight: 500;
    text-align: center;
    color black

.minus
    user-select: none
    cursor pointer
    color black

.plus
    user-select: none
    color black

    cursor pointer
.cart_btn
    user-select: none
    cursor: pointer
    background: rgba(133, 212, 169, 1)
    width 100%
    height: 100%
    display: flex
    align-items: center
    justify-content: center
    font-family: Jura;
    font-size: 2.2vh;
    font-weight: 400;
    color black
.card:hover .bot_con
    flex-direction: column
.card:hover .add_to_cart
    margin-top 2vh
    width 100%
.card:hover .p_counter
    width 50%
.card:hover .cart_btn
    width 50%







