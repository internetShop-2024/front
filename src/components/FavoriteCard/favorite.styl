.favorite_card
    user-select: none
    position relative
    display: flex
    width 53.8vw
    min-height: 13vh
    background: white
    align-items: center
    padding 0 1vw
    box-sizing: border-box
    justify-content: space-between
.left_fav
    display: flex
.fav_img
    height: 10vh
.fav_info
    margin 0 0 0 1vw
    display: flex
    flex-direction: column
.fav_article
    font-family: Jura;
    font-size: 2vh;
    font-weight: 300;
.fav_name
    margin 1.4vh 0 0 0
    font-family: Jura;
    font-size: 2.1vh;
    font-weight: 500;
.close_img
    cursor pointer
    position absolute
    right: 1vh
    top 1vh
.fav_price
    font-family: Jura;
    font-size: 2vh;
    font-weight: 700;
