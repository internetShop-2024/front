    align-items: center

.logo
    width 9vh
    height: 9vh
    background: white
    border-radius: 50%
    margin: 0 1.5vw 0 0

.middle_block
    display: flex
    flex-direction: column
    gap 2.9vh
.m_top_block
    display: flex
    width 100%
    gap 1.5vw
    
.link
    background: rgba(194, 194, 194, 1)
    width 10vw
    height: 4vh
.m_bottomn_block
    display: flex
    gap 1.5vw
.link_b
    background: rgba(194, 194, 194, 1)
    width 10vw
    height: 6vh
.search
    background: rgba(246, 246, 246, 1)
    width 35vw
    height: 6vh
.right_block
    height: 13vh
    display: flex
    flex-direction: column
    margin 0 0 0 13vw

.button
    background: rgba(194, 194, 194, 1)
    height: 4vh
    width 4vh
.r_top_block
    display: flex
    gap 2.4vw
    margin 0 0 3.8vh 0

.r_bottomn_block
    width 100%
    display: flex
    justify-content: space-between
.smth
    width 9.4vw
