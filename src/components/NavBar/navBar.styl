.nav_bar
    width 100%
    height: 23vh
    background: rgba(255, 255, 255, 1)
    display: flex
    flex-direction: column
    padding 0 4vw 0 4vw
    box-sizing: border-box
    align-items: center
.logo
    width 9vh
    height: 9vh
    background: white
    border-radius: 50%
    margin: 0 1.5vw 0 0
    
.link
    margin-left: 1vw
    font-family: Jura;
    font-size: 20px;
    font-weight: 400;
    line-height: 23.66px;
    text-align: left;
    cursor pointer

.top_nav
    height: 50%
    display: flex
    justify-content: space-between
    width 100%
.left_nav
    gap 1vw
    display: flex
    align-items: center
.right_nav
    display: flex
    align-items: center
    gap 1vw
.bot_nav
    width 100%
    height: 50%
    display: flex
    justify-content: space-between
    align-items: center
.b_left_nav
    display: flex
    gap 1vw
.b_right_nav
    display: flex
    gap 2vw
.social
    cursor pointer
.catalog
    cursor: pointer
    display: flex
    justify-content: center
    align-items: center
    background: rgba(133, 212, 169, 1)
    border-radius: 0.5vh
    width 10.9vw
    height: 6.8vh
    font-family: Jura;
    font-size: 20px;
    font-weight: 700;
    line-height: 23.66px;

.search_con
    position relative

.search
    border: none
    outline: none
    border-radius: 0.5vh
    background: rgba(246, 246, 246, 1)
    width 39vw
    height: 6.8vh
    box-sizing: border-box
    padding-left: 3vw 
.s_img
    position absolute
    top 1.5vh
    left 1vw
.sign_in
    display: flex
    justify-content: center
    align-items: center
    font-family: Jura;
    font-size: 20px;
    font-weight: 700;
    line-height: 23.66px;
    cursor: pointer
    border-radius: 0.5vh
    width 10.9vw
    height: 6.8vh
    background: rgba(133, 212, 169, 1)
.cart
    display: flex
    justify-content: center
    align-items: center
    cursor pointer
    border-radius: 0.5vh
    height: 6.8vh
    width 4.3vw
    background: rgba(133, 212, 169, 1)
